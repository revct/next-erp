generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 联系人
model Contact {
  id        Int      @id @default(autoincrement())
  name      String?
  phone     String?
  email     String?
  company   String?
  country   String?
  state     String?
  city      String?
  address   String?
  zipcode   String?
  remarks   String?
  createdAt DateTime @default(now())
}

// 供应商信息
model Supplier {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  phone     String?
  remarks   String
  createdAt DateTime @default(now())
}

// 物料
model Item {
  id        Int      @id @default(autoincrement())
  name      String?
  code      String?
  specs     String?
  Supplier  String?
  createdAt DateTime @default(now())
}

// 库存
model Stock {
  id        Int      @id @default(autoincrement())
  itemId    Int?
  number    Int?     @default(0)
  location  String?
  createdAt DateTime @default(now())
}

// 订单
model Order {
  id          Int      @id @default(autoincrement())
  status      String
  customerId  Int?
  itemId      Int?
  createdAt   DateTime @default(now())
  deliveredAt DateTime @default(now())
}

// 登录用户信息
model User {
  id    Int     @id @default(autoincrement())
  email String?
  name  String?
  role  String? @default("USER")
  phone String?
  hash  String
  salt  String
}
