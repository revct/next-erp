generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String?
  phone     String?
  email     String?
  company   String?
  country   String?
  state     String?
  city      String?
  address   String?
  zipcode   String?
  remarks   String?
  createdAt DateTime @default(now())
}

// 供应商信息
model Supplier {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  phone     String?
  remarks   String
  createdAt DateTime @default(now())
}

model Item {
  id        Int      @id @default(autoincrement())
  name      String?
  code      String?
  specs     String?
  Supplier  String?
  createdAt DateTime @default(now())
}

model Stock {
  id        Int      @id @default(autoincrement())
  itemId    Int?
  number    Int?     @default(0)
  location  String?
  createdAt DateTime @default(now())
}

model Order {
  id          Int      @id @default(autoincrement())
  status      String
  customerId  Int?
  itemId      Int?
  createdAt   DateTime @default(now())
  deliveredAt DateTime @default(now())
}
